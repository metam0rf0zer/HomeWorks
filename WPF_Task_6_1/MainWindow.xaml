<Window x:Class="WPF_Task_6_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Task_6_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Window.Resources>
        <local:TextLengthToProgressBarConverter x:Key="LengthConverter"/>
        <local:VisibilityConverter x:Key="VisibilityConverter"/>
    </Window.Resources>
    <StackPanel>

        <TextBox x:Name="txtBox" Height="20" Margin="5"/>
        <CheckBox x:Name="chkBox" Content="Показать детали" Height="20" Margin="5"/>
        <StackPanel Visibility="{Binding IsChecked, ElementName=chkBox, Converter={StaticResource VisibilityConverter}}">
            <TextBlock x:Name="txtBlock" 
               Margin="5"               
               Text="{Binding Path=Text, ElementName=txtBox, Converter={StaticResource LengthConverter}, StringFormat=Длина текста: {0}}"/>
            <ProgressBar x:Name="proressBar" Height="20" 
                         Margin="5"                
               Value="{Binding Path=Text, ElementName=txtBox, Converter={StaticResource LengthConverter}}"/>

        </StackPanel>



    </StackPanel>
</Window>

    