<Window x:Class="WPF_Task_9_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Task_9_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Menu Height="Auto">
            <MenuItem Header="Действия">
                <MenuItem Header="Изменить цвет" Command="local:CustomCommands.ChangeColor">
                    <MenuItem.CommandBindings>
                        <CommandBinding Command="local:CustomCommands.ChangeColor" Executed="ChangeColor"/>
                    </MenuItem.CommandBindings>
                </MenuItem>
                <MenuItem Header="Отменить"/>
            </MenuItem>

        </Menu>
        <Button Command="local:CustomCommands.ChangeColor" 
                Content="Изменить цвет" 
                Margin="50"
                Height="25"
                Width="100"/>
        
        <Button Content="Отменить" Margin="50" Height="25" Width="100"/>

    </StackPanel>
</Window>
