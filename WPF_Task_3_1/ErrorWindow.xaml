<Window x:Class="WPF_Task_3_1.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Task_3_1"
        mc:Ignorable="d"
        Title="" Height="300" Width="500" ResizeMode="NoResize">
    <Grid>
        <TextBlock 
            Text="Необходимо согласие на обработку данных!"
            FontSize="20" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Margin="0,0,0,75"/>
        
        <StackPanel Height="75" 
                    Background="#FFD8D8D8" 
                    Orientation="Horizontal" 
                    VerticalAlignment="Bottom" 
                    Visibility="Visible" >            
        </StackPanel>
        
        <Button Margin="20"
                Width="100"
                Height="25"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Content="OK" Click="Button_Click"/>       


    </Grid>
</Window>
