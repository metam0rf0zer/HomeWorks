<Window x:Class="WPF_Task_3_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Task_3_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--Разметка-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Margin="5,10,0,0" Content="Имя студента:"/>
        <TextBox Name="NameStudentTextBox"
                 Margin="10,10,10,0"
                 Grid.Row="1" 
                 BorderBrush="Gray" 
                 Height="Auto" 
                 Text="Введите имя" VerticalAlignment="Top"
                 />
        <Label Grid.Row="2" Margin="5,10,0,0" Content="Факультет:" />
        <ComboBox Name="FacultyComboBox" Grid.Row="3" Margin="10,10,10,0" Height="25" VerticalAlignment="Top">
            <ComboBoxItem>Программирование</ComboBoxItem>
            <ComboBoxItem>Дизайн</ComboBoxItem>
            <ComboBoxItem>Менеджмент</ComboBoxItem>            
        </ComboBox>
        <Label Margin="5,10,0,0" Grid.Row="4" Content="Доступные курсы:"/>
        <ListBox SelectionMode="Multiple" Name="AvailableCoursesListBox" Grid.Row="5" Margin="10,10,10,0" Height="Auto" VerticalAlignment="Top">
            <ListBoxItem>WPF</ListBoxItem>
            <ListBoxItem>C#</ListBoxItem>
            <ListBoxItem>Python</ListBoxItem>
            <ListBoxItem>SQL</ListBoxItem>
            <ListBoxItem>NoCode</ListBoxItem>
        </ListBox>
        
        <CheckBox Margin="10" Name="Apply" Grid.Row="6" VerticalAlignment="Bottom" Checked="Apply_Checked"  >
            Я согласен получать рассылку
        </CheckBox>
        <Button Margin="0,0,0,10" Grid.Row="7" Content="Записаться" Height="25" Width="250" HorizontalAlignment="Center" Click="Button_Click">
            
        </Button>









    </Grid>
</Window>
