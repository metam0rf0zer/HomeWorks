<Window x:Class="WPF_Task_8_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Task_8_1"
        mc:Ignorable="d"
        Language="ru-RU"
        Title="MainWindow" Height="600" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="ListBoxTemplate">
            <Border x:Name="Border" Padding="10" CornerRadius="10"  Background="LightBlue" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  Width="Auto"/>
                        <ColumnDefinition />                        
                    </Grid.ColumnDefinitions>

                    <Image VerticalAlignment="Bottom" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Width="100" Height="100" Source="{Binding Image}"/>
                    <TextBlock FontSize="20" FontWeight="Bold" FontStyle="Italic" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1" Text="{Binding ProductName}"/>
                    <TextBlock FontSize="15" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Text="{Binding Price, StringFormat={}{0} ₽}"/>                    
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding ProductType}">
                    <DataTrigger.Value>
                        <local:ProductTypes>Food</local:ProductTypes>
                    </DataTrigger.Value>
                    <Setter TargetName="Border" Property="Background" Value="LightGreen"/>
                </DataTrigger>
                 
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" FontSize="30" FontStyle="Oblique" FontWeight="ExtraBold" Background="Red" Text="Выбери своего бойца! XD"/>
        <ListBox            
            Name="listBox"
            Width="500"
            Margin="15"
            HorizontalContentAlignment="Stretch"
            ItemTemplate="{StaticResource ListBoxTemplate}">            
        </ListBox>
    </StackPanel>
</Window>
