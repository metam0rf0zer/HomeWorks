<Window x:Class="Task_WPF_1_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_WPF_1_1"
        mc:Ignorable="d"
        Title="Счётчик кликов" Height="200" Width="300">
    <Grid>
        <Button 
            Name="myButton"
            Content="Кликни меня" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Click="Button_Click" 
            Height="44" 
            Width="91" 
            Margin="0,84,0,0"/>
        <TextBlock 
            Name="clickCounterTextBlock"
            HorizontalAlignment="Center" 
            Margin="0,48,0,0" 
            TextWrapping="Wrap" 
            Text="Клики: 0" 
            VerticalAlignment="Top"/>


    </Grid>
</Window>
