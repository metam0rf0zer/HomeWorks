<Window x:Class="WPF_Task_5_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Task_5_1"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Панель настроек" Height="250" Width="250">

    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource HeaderTextStyle}"/>
        <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource HoverColor}"/>
                    <Setter Property="Margin" Value="10"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{StaticResource DisbledColor}"/>
                </Trigger>               
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <StackPanel VerticalAlignment="Top">
        <TextBlock Text="Настройки приложения"/>
        <Button Content="Сохранить"/>
        <Button Content="Отменить"/>
        <Button Content="Специальная кнопка"                 
                IsEnabled="{Binding IsChecked, ElementName=ToggleButton}"/>
        <CheckBox x:Name="ToggleButton" Content="Включить режим" HorizontalAlignment="Center"/>        
    </StackPanel>
</Window>
